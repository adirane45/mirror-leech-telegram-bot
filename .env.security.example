# Phase 1 Security Environment Variables
# Copy to .env and update with your values
# NEVER commit this file to git

# ===== GRAFANA CONFIGURATION =====
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_USERS_ALLOW_SIGN_UP=false
GRAFANA_SECURITY_ADMIN_USER=admin
GRAFANA_SECURITY_ADMIN_PASSWORD=admin
GF_SECURITY_DISABLE_GRAVATAR=true

# Grafana API Key (generated by security_setup.py)
GRAFANA_API_KEY=

# ===== PROMETHEUS CONFIGURATION =====
# Bearer token for metrics endpoint authentication
PROMETHEUS_BEARER_TOKEN=
PROMETHEUS_RETENTION=15d
PROMETHEUS_SCRAPE_INTERVAL=15s

# ===== REDIS CONFIGURATION =====
# Redis password (generated by security_setup.py)
REDIS_PASSWORD=
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ===== MONGODB CONFIGURATION =====
# MongoDB credentials (generated by security_setup.py)
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=
MONGO_USERNAME=mltb_bot
MONGO_PASSWORD=
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=mltb

# ===== BOT CONFIGURATION =====
# API Key for bot endpoints
BOT_API_KEY=
BOT_HOST=0.0.0.0
BOT_PORT=8050
BOT_ENABLE_METRICS=true
BOT_ENABLE_REDIS=true
BOT_ENABLE_CELERY=true

# ===== CELERY CONFIGURATION =====
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/1
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=4
CELERY_WORKER_MAX_TASKS=100

# ===== SECURITY CONFIGURATION =====
# TLS/HTTPS Settings
ENABLE_HTTPS=false
HTTPS_CERT_PATH=/etc/ssl/certs/server.crt
HTTPS_KEY_PATH=/etc/ssl/private/server.key

# Security Headers
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=localhost,127.0.0.1

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===== LOGGING & MONITORING =====
LOG_LEVEL=INFO
ENABLE_AUDIT_LOG=true
ENABLE_ERROR_TRACKING=true
SENTRY_DSN=

# ===== BACKUP CONFIGURATION =====
ENABLE_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_LOCATION=/backups
BACKUP_RETENTION_DAYS=30

# ===== SKIP VERSION UPDATE (Phase 1 Specific) =====
SKIP_UPDATE=1

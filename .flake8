[flake8]
# Maximum line length
max-line-length = 100

# Ignore specific errors
# E203: Whitespace before ':' (conflicts with black)
# E266: Too many leading '#' for block comment
# E501: Line too long (handled by black)
# W503: Line break before binary operator (conflicts with black)
# W504: Line break after binary operator
# F401: Module imported but unused (handled by autoflake)
# F403: Unable to detect undefined names
# D100-D107: Missing docstrings (can be added gradually)
extend-ignore = E203,E266,E501,W503,W504,F401,F403,D100,D101,D102,D103,D104,D105,D107

# Maximum complexity
max-complexity = 15

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    migrations

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    test_*.py:E501
    conftest.py:E501

# Enable specific plugins
enable-extensions = B,C,D,E,F,G,H,I,L,M,N,P,Q,R,S,T,U,V,W,X,Y,Z

# Show source code for errors
show-source = True

# Show statistics
count = True
statistics = True
